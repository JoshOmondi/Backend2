{
  "compilerOptions": {
    "outDir": "./build", // Where compiled files go
    "rootDir": "./src", // Where TypeScript source files are
    "target": "es2020", // ECMAScript target version
    "module": "commonjs", // Module system
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Interoperability with CommonJS
    "skipLibCheck": true // Skip type checking of declaration files
  },
  "include": ["src/**/*"], // Include all TypeScript files in src
  "exclude": ["node_modules", "build", "cypress.config.ts"] // Exclude irrelevant files
}
